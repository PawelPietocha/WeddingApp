@page
@model WeddingApp.LoginModel
@{
    ViewData["Title"] = "Login";

}
<style>
    body {
        background-color: darkgray;
    }

    h1 {
        text-align: center;
    }

    .logowanie {
        display: block;
        margin-left: auto;
        margin-right: auto;
        background-color: #17a2b8;
        width: 20%;
        border: 2px solid black;
        border-bottom-left-radius: 20%;
        border-bottom-right-radius: 20%;
    }
    .buttonSubmit {
    display: block;
    margin-left: auto;
    margin-right: auto;
    border-radius: 50%;
    color: #fff;
    background-color: #28a745;
    border-color: #28a745;
}
    .message {
    text-align:center;
    font-style:italic;
    margin-top:2%;
}

</style>
<body>


    <h1>Login</h1>

    <a asp-page="/Index" class="btn btn-success">Powrót do strony głównej</a>
    <form method="post">
        <div class="logowanie">
            <div class="btn btn-info">
                <input type="search" placeholder="Login" class="form-control" asp-for="Login" />
            </div>
            <br />
            <div class="btn btn-info">
                <input type="password" placeholder="Password" class="form-control" asp-for="Password" />
            </div>
            <br />
            <span>
                <button type="submit" class="buttonSubmit">Zaloguj</button>
            </span>
        </div>
    </form>

    <div class="message">@Model.Message</div>
</body>

